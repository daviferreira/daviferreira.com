<%= form_for @category, :url => url do |f| %>

  <%= render 'admin/shared/error_messages', :object => f.object %>

  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </fieldset>
  
  <fieldset>
    <%= f.label "Categoria do site?" %>
    <%= f.check_box :area %>
  </fieldset>

  <footer>
    <div class="submit_link">
      <%= f.submit "Salvar", :class => "alt_btn" %>
    </div>
  </footer>

<% end %>
