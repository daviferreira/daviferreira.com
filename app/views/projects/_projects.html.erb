<div class="projects-container">
  <ul id="projects-main" class="clearfix">
  <% @projects.each do |project| %>
    <li class="project round-small shadow <% if ((@projects.index(project)+1) % 3) == 0 %>last<% end %>">
      <div class="project-container round-small">
        <div class="screenshot round-small"><%= link_to image_tag(project.screenshot.url(:thumb), :width => 266, :height => 186, :alt => project.name), project_path(project) %></div>
        <h3><%= project.name %></h3>
        <p><%= project.description %></p>
        <p class="category">Categoria: <%= link_to project.category.name, "/projects/category/" + project.category.cached_slug %></p>
        <p class="tags clearfix"><span class="label">Tags:</span> <%= tags_as_links(project.tags) %></p>
        <p class="time-ago round-small">Finalizado hรก <%= time_ago_in_words(project.due_date) %>.</p>
        <div class="actions clearfix">
          <ul>
            <% unless project.url.nil? or project.url.empty? %>
              <li><%= link_to image_tag('/images/link_to.gif', :width => 12, :height => 6)+" "+strip_url(project.url), project.url, :rel => "external" %></li>
            <% end %>
            <li class="more-details"><%= link_to "Mais detalhes", project_path(project) %></li>
          </ul>
        </div>
      </div>
    </li>
  <% end %>
  </ul>
</div>
