<section id="post">
  <article>
    <%= raw(@post.body) %>
  </article>
</section>
  
<section id="comments">
	<% if not @post.block_comments or not @post.comments.published.empty? %>
	  <h2><%= total_comments_in_words(@post.comments.published.length) %></h2>    
	<% end %>
    
	<% unless @post.comments.published.empty? %>
	    <% @post.comments.published.each do |comment| %>
	      <%= render comment if comment.comment_id.nil? or comment.comment_id == 0 %>
	    <% end %>
	<% end %>
</section>

<% if not @post.block_comments %>
<section id="comments-form">
	<header>
		<h3 id="tit-form-comment">Deixe seu comentário:</h3>
	</header>
  <%= render "comments/form", :id => "new_comment" %>
</section>
<% else %>
  <div class="alert-message info" style="text-align:center;">O envio de comentários está bloqueado para este post.</div>
<% end %>


<script type="text/javascript">
$(function(){
  $('pre').each(function(){
    var lang = $(this).attr('class').replace(/brush:/, '');
    if(lang == "") lang = "xml";
    $(this).snippet(lang,{
      style:"vim-dark",
      clipboard:"/flash/ZeroClipboard.swf",
    });
  });
});
</script>