 <div class="container">
            
    <header>
      <div class="row">
        <div class="span12">
          <h1><%= @post.title %></h1>
        </div>
      </div>
    </header>

    <article id="main">
      <div class="row">

        <div class="span3">
          <%= render "layouts/blog_about" %>
          <aside class="article-info">
            <span class="separator"></span>
            <time datetime="<%= @post.published_date.to_s[0..9] %>"><i class="icon-calendar"></i> <%= link_to l(@post.published_date), posts_archive_path %></time>
            <% unless @post.categories.empty? %>
            <p class="tags"><i class="icon-tags"></i> 
              <% @post.categories.each do |category| %>
              <%= link_to category.name.downcase, posts_category_path(:category => category) %><% if category != @post.categories.last %>,<% end %> 
              <% end %>
            <% end %>
          </p>
          <p><i class="icon-home"></i> <%= link_to "ir para a home", blog_path %></p>
          </aside>
        </div>
        <div class="span8 offset1">
          <%= raw(@post.body) %>
        </div>
      </div>
    </article>
</div>

<% if not @post.block_comments or not @post.comments.published.empty? %>
<section id="comments" class="content">
  <div class="container">
    <% unless @post.comments.published.empty? %>
    <div class="row">
      <header class="span12">
        <h2>Coment√°rios</h2>    
      </header>
    </div>
    <% end %>
    <div class="row" id="comments-list">
      <div id="disqus_thread"></div>
      <script type="text/javascript">
          var disqus_shortname = 'daviferreiracom';
          (function() {
              var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();
      </script>
      <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    </div>
  </div>
</section>
<% end %>  

<% if not @post.block_comments %>
<section id="comments-form">
  <div class="container">
    <div class="row">
      <header class="span12">
        <h2 id="tit-form-comment"><%= t :leave_your_comment %>:</h2>
      </header>
    </div>
    <div class="row">
      <div class="span8 offset2">
        <%= render "comments/form", :id => "new_comment" %>
      </div>
    </div>
  </div>
</section>
<% end %>
